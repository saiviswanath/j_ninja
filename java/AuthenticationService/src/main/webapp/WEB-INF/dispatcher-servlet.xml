<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
	http://www.springframework.org/schema/context
        	http://www.springframework.org/schema/context/spring-context-4.2.xsd http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd">
	<context:component-scan base-package="com.xyz.controller" />
	<context:component-scan base-package="com.xyz.dao" />
	<context:component-scan base-package="com.xyz.converters" />
	<mvc:annotation-driven>
		<mvc:message-converters>
			<bean id="mappingJacksonHttpMessageConverter"
				class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
				<property name="objectMapper" ref="jacksonObjectMapper" />
			</bean>
		</mvc:message-converters>
	</mvc:annotation-driven>

	<bean id="jacksonObjectMapper" class="com.xyz.serviceutils.json.jackson.ObjectMapperFactory" />

	<bean id="principalService" class="com.xyz.services.PrincipalServiceImpl" />

	<import resource="security.xml" />

</beans>