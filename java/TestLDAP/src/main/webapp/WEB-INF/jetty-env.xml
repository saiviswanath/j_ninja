<!-- jetty -->
<Configure id="wac" class="org.eclipse.jetty.webapp.WebAppContext">
<New id="jdbc/test" class="org.eclipse.jetty.plus.jndi.Resource">
	<Arg></Arg>
	<Arg>jdbc/test</Arg>
	<Arg>
		<New class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
			<Set name="Url">jdbc:mysql://localhost:3306/test</Set>
			<Set name="User">foobar</Set>
			<Set name="Password">foobar</Set>
		</New>
	</Arg>
	  <Call name="bindToENC">
     <Arg>jdbc/test</Arg>
  </Call>  
</New>
</Configure>